<!DOCTYPE html>
<html>
<head>
  <title>Edit User</title>
</head>
<body>
  <div class="wrapper">
    <div>
      <div>
        <%= form_for(@user) do | form | %>
          <% render 'shared/error_messages' %>

          <%= form.label :name %><br>
          <%= form.text_field :name %><br><br>

          <%= form.label :email %><br>
          <%= form.email_field :email %><br><br>

          <%= form.label :password %><br>
          <%= form.password_field :password %><br><br>
          <%= form.label :password_confirmation %><br>
          <%= form.password_field :password_confirmation %><br><br>

          <% if @user.permission >= 3 %>
            <%= form.label :permission %>
            <%= form.number_field :permission %>
          <% end %>

          <%= form.submit "Save Changes" %><br><br>
        <% end %>

        <!-- <div class="gravatar_edit">
          <%= gravatar_for @user %>
          <a href="http://gravatar.com/emails" target="_blank">change</a>
        </div> -->
      </div>
    </div>
  </div>

</body>
</html>